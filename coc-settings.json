{
  "suggest.enablePreselect": false,
  "suggest.noselect": true,

  "yaml.format.enable": false,
  "yaml.schemaStore.enable": false,
  "yaml.schemas": {
      "kubernetes": "/k8s*.y*ml"
  }
  ,
  "languageserver": {
    "golang": {
        "command": "gopls",
        "args": ["-remote=auto"],
        "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
        "filetypes": ["go"]
    }
  },
  "java.import.gradle.java.home": "/usr/lib/jvm/java-11-openjdk"
}
